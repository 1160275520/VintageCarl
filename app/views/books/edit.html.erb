<div class="main-agileits">
   <div class="form-w3-agile">
      <h2>Edit Your Book</h2>
      <%= form_for @book do |f| %>
            <input placeholder="Title" type="text" name="book[title]" id="book_title" value="<%= @book.title %>">
            <input placeholder="Author" type="text" name="book[author]" id="book_author" value="<%= @book.author %>">
            <input placeholder="Description" type="text" name="book[courses]" id="book_courses" value="<%= @book.courses %>">
            <input placeholder="Price" type="text" name="book[price]" id="book_price" value="<%= @book.price %>">
            <h10> Upload a image </h10>
            <%= f.file_field :image %>
            <input type="submit" name="commit" value="Submit" class="btn btn-primary" data-disable-with="Submit">
        </div>
      <% end %>
   </div>
</div>
