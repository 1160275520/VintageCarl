<h3 class="white">Search For Books</h3>
<div class="row index">
  <% @books.each_with_index do |book,index| %>
    <div class="col-4" align="center">
       <img class="book-img" src="<%= book.image %>" width="100%">
       <div class="book-title"><a class="title" href="/books/<%= book.id %>"><%= book.title %></a></div>
       <div class="book-author"> <%= book.author %></div>
       <div class="book-price"> <%= book.price %></div>
    </div>
  <% end %>
</div>