<h3 class="white">Search For Treasures</h3>
<div class="row index">
  <% @items.each_with_index do |item,index| %>
    <div class="col-4" align="center">
       <img class="item-img" src="<%= item.image %>" width="100%">
       <div class="item-title"><a class="title" href="/items/<%= item.id %>"><%= item.title %></a></div>
       <div class="item-price"> <%= item.price %></div>
    </div>
  <% end %>
</div>

